extends layout.pug

block content
  .container.header
    h1 Book Browsing
    form.form-inline.my-2.my-lg-0
      input#input-search.form-control.mr-sm-2(type='search', placeholder='Search', aria-label='Search')
      button#btn-search.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
  table#tableBrowse.table
    thead.thead-dark
      tr
        th(scope='col') #
        th(scope='col') Title
        th(scope='col') Author
        th(scope='col') Publisher
        th(scope='col') Availability